{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "dist/server",
    "rootDir": ".",
    "lib": ["ES2020"],
    "allowImportingTsExtensions": false,
    "target": "ES2020"
  },
  "include": ["server/**/*", "common/**/*"],
  "exclude": ["node_modules", "src/**/*"]
}
